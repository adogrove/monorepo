{
  "name": "@adogrove/adonis-auditing",
  "description": "Audit your Lucid models with ease.",
  "version": "1.2.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/tests",
    "!build/bin"
  ],
  "exports": {
    ".": "./build/index.js",
    "./services/main": "./build/services/auditing.js",
    "./auditing_provider": "./build/providers/auditing_provider.js",
    "./types": "./build/src/types.js"
  },
  "scripts": {
    "biome": "biome check .",
    "biome:write": "biome check --write .",
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "yarn lint && yarn typecheck",
    "test": "c8 yarn quick:test",
    "prebuild": "yarn lint && yarn clean",
    "build": "tsc",
    "postbuild": "yarn copy:templates",
    "dev": "tsc --watch",
    "version": "yarn build"
  },
  "keywords": [
    "accountability",
    "audit",
    "auditing",
    "changes",
    "lucid",
    "history",
    "log",
    "logging",
    "observer",
    "adonis",
    "adonisjs",
    "record",
    "revision",
    "tracking"
  ],
  "author": "Xavier Stouder <xavier@stouder.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/adogrove/monorepo",
    "directory": "packages/auditing"
  },
  "bugs": {
    "url": "https://github.com/adogrove/monorepo/issues"
  },
  "homepage": "https://adogrove.stouder.io/packages/auditing",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.19.3",
    "@adonisjs/lucid": "^21.8.2",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/assert": "^4.2.0",
    "@japa/file-system": "^3.0.0",
    "@japa/runner": "^4.4.1",
    "@swc/core": "^1.15.11",
    "@types/luxon": "^3",
    "@types/node": "^25.1.0",
    "better-sqlite3": "^12.6.2",
    "c8": "^10.1.3",
    "get-tsconfig": "^4.13.6",
    "luxon": "^3.7.2",
    "ts-node-maintained": "^10.9.6",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@adonisjs/auth": "^9.1.1",
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/lucid": "^20.3.0 || ^21.0.0",
    "luxon": "^3.7.2"
  },
  "peerDependenciesMeta": {
    "@adonisjs/auth": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "json-summary"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
