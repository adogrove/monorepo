{
  "name": "@adogrove/adonis-translatable",
  "description": "Translatable fields for Lucid models.",
  "version": "1.2.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/tests",
    "!build/bin"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js"
  },
  "scripts": {
    "biome": "biome check .",
    "biome:strict": "biome check --error-on-warnings .",
    "biome:write": "biome check --write .",
    "clean": "del-cli build coverage",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "test": "yarn biome:strict && yarn typecheck && c8 yarn quick:test",
    "build": "yarn clean && tsc && yarn copy:templates",
    "dev": "tsc --watch",
    "version": "yarn build"
  },
  "keywords": [
    "translation",
    "translatable",
    "i18n",
    "lucid",
    "adonis",
    "adonisjs",
    "models"
  ],
  "author": "Xavier Stouder <xavier@stouder.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/adogrove/monorepo",
    "directory": "packages/translatable"
  },
  "bugs": {
    "url": "https://github.com/adogrove/monorepo/issues"
  },
  "homepage": "https://adogrove.stouder.io/packages/geolite2",
  "license": "AGPL-3.0-or-later",
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/lucid": "^20.3.0 || ^21.0.0"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "json-summary"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "devDependencies": {
    "@adonisjs/core": "^6.20.0",
    "@adonisjs/i18n": "^2.2.3",
    "@adonisjs/lucid": "^21.8.2",
    "@biomejs/biome": "^2.3.14",
    "@japa/assert": "^4.2.0",
    "@japa/file-system": "^3.0.0",
    "@japa/runner": "^4.4.1",
    "@swc/core": "^1.15.11",
    "@types/copyfiles": "^2",
    "@types/node": "^25.2.2",
    "better-sqlite3": "^12.6.2",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^7.0.0",
    "ts-node-maintained": "^10.9.6",
    "typescript": "^5.9.3"
  }
}
